{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "types": [
            "vite/client"
        ],
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": "./",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "verbatimModuleSyntax": true,
        "paths": {
            "@*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "./src"
    ]
}
